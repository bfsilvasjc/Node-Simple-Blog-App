<h2>Lista de categorias</h2>
<hr>
<a href="/admin/categorias/add" class="btn btn-success">Nova categoria</a>

<div class="row">
{{#each categorias}}
    <div class="col-md-6">
        <div class="card mt-4">
            <div class="card-body">
                <h4>{{this.nome}}</h4>
                <small>Slug: {{this.slug}}</small><br>
                <small>Data: {{this.date}}</small><br>
                <a class="btn btn-primary mt-4" href="/admin/categorias/edit/{{_id}}">Editar categoria</a>
                <form action="/admin/categorias/delete" method="POST">
                    <input type="hidden" name="id" value="{{_id}}">
                    <button type="submit" style="float:right" class="btn btn-danger">Apagar categoria</button>
                </form>
            </div>
        </div>
    </div>
{{/each}}
</div>