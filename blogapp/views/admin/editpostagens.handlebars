{{#each erros}}
<div class="alert alert-danger">{{texto}}</div>
{{/each}}
<div class="card">
    <div class="card-body">
        <h4>Editar postagem</h4>
        <form action="/admin/postagens/edit" method="POST">
            <input type="hidden" name="id" value="{{postagem._id}}">
            <label for='titulo'>Título</label>
            <input value="{{postagem.titulo}}" name="titulo" type="text" class="form-control">
            <label for='slug'>Slug</label>
            <input value="{{postagem.slug}}" name="slug" type="text" class="form-control">
            <label for='descricao'>Descrição</label>
            <input value="{{postagem.descricao}}" name="descricao" type="text" class="form-control">
            <label for="conteudo">Conteúdo</label>
            <textarea class="form-control" name="conteudo" id="conteudo" cols="30" rows="4">{{postagem.conteudo}}</textarea>
            <label for="categoria">Categoria</label>
            <select name="categoria" class="form-control" id="categoria">
                {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option value="0">Nenhuma categoria registrada</option>
                {{/each}}
            </select>
            <button type="submit" class="btn btn-success mt-4">Editar postagem</button>
        </form>
    </div>
</div>