{{#each erros}}
<div class="alert alert-danger">{{texto}}</div>
{{/each}}
<div class="card">
    <div class="card-body">
        <h4>Nova postagem</h4>
        <form action="/admin/postagens/nova" method="POST">
            <label for='titulo'>Título</label>
            <input name="titulo" type="text" class="form-control">
            <label for='slug'>Slug</label>
            <input name="slug" type="text" class="form-control">
            <label for='descricao'>Descrição</label>
            <input name="descricao" type="text" class="form-control">
            <label for="conteudo">Conteúdo</label>
            <textarea class="form-control" name="conteudo" id="conteudo" cols="30" rows="4"></textarea>
            <label for="categoria">Categoria</label>
            <select name="categoria" class="form-control" id="categoria">
                {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option value="0">Nenhuma categoria registrada</option>
                {{/each}}
            </select>
            <button type="submit" class="btn btn-success mt-4">Criar postagem</button>
        </form>
    </div>
</div>